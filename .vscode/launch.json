    "version": "0.2.0",
    "python": "${config.python.pythonPath}",
    "configurations": [
        {
            "name": "Python: run scope foundry",
            "type": "python",
            "stopOnEntry": false,
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            }
        }
    ]
}